{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"ignore": [
			"node_modules/**",
			"games/**",
			"**/pnpm-lock.yaml",
			"**/dist/**",
			"**/.astro/**",
			"**/assets/bundled/**",
			"**/assets/json/**"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"ignore": [
			"**/pnpm-lock.yaml",
			"**/dist/**",
			"**/.astro/**",
			"**/node_modules/**",
			"**/assets/bundled/**",
			"**/assets/json/**",
			"*.astro"
		]
	},
	"organizeImports": {
		"enabled": true,
		"ignore": [
			"**/pnpm-lock.yaml",
			"**/dist/**",
			"**/node_modules/**",
			"**/assets/bundled/**",
			"**/assets/json/**"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": [
			"**/pnpm-lock.yaml",
			"**/dist/**",
			"**/node_modules/**",
			"**/assets/bundled/**",
			"**/assets/json/**"
		]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
